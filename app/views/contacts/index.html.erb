<div class='container'>
  <h1>Agenda de contatos</h1>
  <p>Para cadastrar um contato clique no botão abaixo</p>

  <%= link_to 'Cadastra novo contato', new_contact_path, class:'btn btn-success' %>
  <div>
    <table class='table table-striped'>
      <thead>
          <tr>
                <th scope='col'>#</th>
                <th scope='col'>Nome</th>
                <th scope='col'>Email</th>
                <th scope='col'>Observação</th>
                <th scope='col'>Tipo</th>
                <th scope='col'>Ações</th>
          </tr>
        </thead>
        <tbody>
        <% @contacts.each do |contact| %>
        <tr> 
          <td><%= contact.id %></td>
          <td><%= contact.name %></td>
          <td><%= contact.email%></td>
          <td><%= contact.rmk%></td>
          <td><%=  contact.kind.description%></td>
          <td>
            <%= link_to 'Editar', edit_contact_path(contact) , class: 'btn btn-primary' %>
            <%= link_to 'Visualizar',  contact_path(contact)  , class: 'btn btn-warning' %>
            <%=link_to 'Apagar',  contact_path(contact), method: :delete,  data: {confirm:"Tem certeza que deseja apagar o contato: #{contact.name}"} , class: 'btn btn-danger' %>
          </td>

        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>