<%= form_with model:@contact, local:true do |f|%>
  <%= f.label 'Nome' %>
  <%= f.text_field :name %>

  <%= f.label 'Email' %>
  <%= f.text_field :email %>

  <%= f.label 'Observação' %>
  <%= f.text_field :rmk %>

  <%= f.label 'Tipo de contato' %>
  <%= f.collection_select :kind_id, options_for_kind, :id, :description %>

  <button type='submit'>Salvar</button>
  <%= link_to 'Cancelar', contacts_path %>
<% end %>
