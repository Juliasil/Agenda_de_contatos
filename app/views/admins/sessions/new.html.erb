
 <section class="h-100 gradient-form" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-xl-10">
        <div class="card rounded-3 text-black">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="card-body p-md-5 mx-md-4">

                <div class="text-center">
                  <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                    style="width: 185px;" alt="logo">
                  <h4 class="mt-1 mb-5 pb-1">Autenticação</h4>
                </div>

                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                
                  <p>Por favor efetue login</p>

                  <div class="form-outline mb-4">
                   <%= f.email_field :email, autofocus: true, autocomplete: "email" , id:"form2Example11", class:"form-control",
                      placeholder:"Phone number or email address" %>
                   <%= f.label :email , class:"form-label", for:"form2Example11" %>
                  </div>

                  <div class="form-outline mb-4">
                    <%= f.password_field :password,autocomplete: "current-password", id:"form2Example22", class:"form-control" %>
                    <%= f.label :password, class:"form-label", for:"form2Example22" %>
                  </div>

                  <div class="text-center pt-1 mb-5 pb-1">
                    <%= f.submit "Entrar", class:"btn btn-primary btn-block fa-lg gradient-custom-2 mb-3"  %>
                  </div>

                <% end %>

              </div>
            </div>
            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
              <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                <h4 class="mb-4">Agenda de contatos</h4>
                <p class="small mb-0">Gerencie seus contatos adicionando telefones e endereços de forma prática e simples.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>







  
  
 
    
  

   





